<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable name="level" type="com.diezsiete.lscapp.vo.Level"/>
    </data>
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:windowBackground"
        android:orientation="vertical">




        <TextView
            android:id="@+id/lessons_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lessons"
            style="@style/Base.TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:gravity="center"
            android:background="@color/lesson_title_background"
            android:textColor="@android:color/white"
            android:padding="@dimen/spacing_simple"
            android:layout_marginStart="@dimen/spacing_simple"
            android:layout_marginEnd="@dimen/spacing_simple"
            android:layout_marginTop="@dimen/spacing_single"
            android:elevation="2dp"
             />

        <android.support.v7.widget.RecyclerView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/lessons"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/spacing_nano"
            android:clipToPadding="false"
            android:scrollbarStyle="outsideOverlay"
            android:scrollbars="vertical"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager"
            android:transitionGroup="false"
            app:spanCount="2" tools:ignore="UnusedAttribute" />
    </LinearLayout>
</layout>
