<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="level" type="com.diezsiete.lscapp.vo.Level"/>
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/level_item"
        app:cardCornerRadius="2dp"
        app:cardElevation="2dp"
        android:layout_marginBottom="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/level_image"
                android:layout_width="@dimen/level_selection_image_size"
                android:layout_height="@dimen/level_selection_image_size"
                android:layout_gravity="center"
                android:adjustViewBounds="false" android:cropToPadding="false"
                android:scaleType="centerCrop" app:srcCompat="@android:drawable/btn_star"
                app:imageUrl="@{level.image}"
                android:contentDescription="@string/level_image"
                />

            <TextView
                android:id="@+id/level_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="20dp"
                android:textSize="20sp"
                android:text="@{level.name}"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</layout>
